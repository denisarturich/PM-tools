// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Prompt {
  id        String   @id @default(cuid())
  title     String   @db.VarChar(200)
  slug      String   @unique @db.VarChar(200)
  summary   String   @db.VarChar(500)
  stage     String   @db.VarChar(100) // например: initiation, planning, execution, monitoring, closure
  fullText  String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("prompts")
}

model StageOrderOverride {
  id             String   @id @default(cuid())
  organizationId String?  @db.VarChar(100) // null для глобальных переопределений
  stage          String   @db.VarChar(100) // initiation, planning, execution, monitoring, closure
  weight         Int      // вес для сортировки (10, 20, 30, 40, 50)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([organizationId, stage])
  @@map("stage_order_overrides")
}
